datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  name      String?
  favorites Favorite[]
}

model Favorite {
  id        String       @id @default(uuid())
  user      User         @relation(fields: [userId], references: [id])
  userId    Int
  title     String
  type      FavoriteType
  metadata  Json?
  createdAt DateTime     @default(now())
}

enum FavoriteType {
  MUSIC
  MOVIE
  GAME
  BOOK
  ART
  OTHER
}
